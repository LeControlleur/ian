<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>
        <%= title %>
    </title>

    <%- include ../template/head.ejs -%>


    <link rel="stylesheet" href="/stylesheets/cloud.css">

</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">



        <%- include ../template/navbar.ejs -%>


        <%- include("../template/sidebar", {user:user}); -%>



        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">iCloud</h1>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item text-warning">Accueil</a></li>
                                <li class="breadcrumb-item text-warning">ianShare</a></li>
                                <li class="breadcrumb-item active">iCloud</li>
                            </ol>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->




            <!-- Main content -->
            <section class="content">
                <div class="container-fluid container-fichiers">



                    <div class="card-footer bg-white">
                        <ul class="mailbox-attachments d-flex align-items-stretch clearfix">

                            <% for (i in files) { %>

                            <li class="mailbox-attachment-icon"
                                style="border:none; width: 130px; display: flex; flex-direction: column; justify-content: flex-start; padding: 0;">
                                <i class="far fa-file-pdf"></i>
                                <a href="/users/iCloud/download/<%= files[i] %>" class="btn btn-default btn-sm float-right"
                                    style="width: 35px; height: 35px; position: relative; left: 70px; bottom: 20px">
                                    <i class="fas fa-download downloadButton"
                                        style="position: relative; bottom: -2px"></i>
                                </a>
                                <p
                                    style="font-size: 0.4cm; position: relative; bottom: 15px; text-overflow: ellipsis; overflow: hidden; white-space: nowrap;">
                                    <%= files[i] %>
                                </p>
                            </li>

                            <% } %>

                        </ul>






                    </div>
                    <!--/. container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Control Sidebar -->
        <%- include ../template/controlSidebar.ejs -%>
        <!-- /.control-sidebar -->

    </div>
    <!-- ./wrapper -->

    <!-- REQUIRED SCRIPTS -->
    <%- include ../template/requiredScripts.ejs -%>

    <script src="/javascripts/fileShowing.js"></script>


</body>

</html>